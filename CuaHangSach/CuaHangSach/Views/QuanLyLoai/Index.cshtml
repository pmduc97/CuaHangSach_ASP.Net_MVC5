@model IEnumerable<CuaHangSach.Models.LOAI>

@{
    ViewBag.Title = ViewBag.TieuDe;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản Lý Loại Sách</h2>

<p>
    @Html.ActionLink("Thêm loại mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenLoai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoai)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaLoai }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaLoai }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaLoai })
        </td>
    </tr>
}

</table>
